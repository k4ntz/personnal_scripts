separator_block_width=30

[audio]
command=~/.config/i3/i3blocks/audio /
interval=60
color=#FFFFFF

[weekend]
label=
command= SECS=$(( $(date --date="Fri. 17:30" +%s) - $(date +%s) )) && printf '%dd %dh %dm\n' $(($SECS/86400)) $(($SECS%86400/3600)) $(($SECS%3600/60))
interval=15
color=#F99D9F

[disk-root]
label=
command=~/.config/i3/i3blocks/disk /
interval=30
color=#9aedfe

[disk2-root]
label=
command=~/.config/i3/i3blocks/disk2 /
interval=30
color=#4a9dae


[memory]
label=
